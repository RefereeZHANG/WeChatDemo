page {
  background-color: #F4EEFF;
}

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 用户信息卡片 */
.user-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
  width: 120rpx;
}

.level-tag {
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  background: #424874;
  color: #F4EEFF;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  white-space: nowrap;
  transform: scale(0.9);
  transform-origin: right bottom;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #424874;
  display: block;
  margin-bottom: 8rpx;
}

.streak {
  font-size: 26rpx;
  color: #A6B1E1;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #DCD6F7;
}

.stat-item {
  text-align: center;
}

.stat-item .num {
  font-size: 36rpx;
  font-weight: bold;
  color: #424874;
  display: block;
}

.stat-item .label {
  font-size: 24rpx;
  color: #A6B1E1;
}

/* 虚拟宠物卡片 */
.pet-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.pet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #424874;
}

.pet-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.pet-image {
  width: 160rpx;
  height: 160rpx;
}

.speech-bubble {
  flex: 1;
  background: #F4EEFF;
  border-radius: 16rpx;
  padding: 20rpx;
  position: relative;
}

.speech-bubble:before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  border-width: 16rpx;
  border-style: solid;
  border-color: transparent #F4EEFF transparent transparent;
}

/* 成就卡片 */
.achievements-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
  position: relative;
}

.card-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #424874;
}

.subtitle {
  font-size: 24rpx;
  color: #A6B1E1;
  font-weight: normal;
}

.achievements-grid {
  display: flex;
  flex-wrap: nowrap;
  gap: 12rpx;
  overflow-x: auto;
  padding: 10rpx 0;
}

.achievement-item {
  flex: 0 0 auto;
  width: 140rpx;
  text-align: center;
  opacity: 0.5;
  transition: all 0.3s;
  padding: 16rpx 12rpx;
  background: #F4EEFF;
  border-radius: 16rpx;
}

.achievement-item.unlocked {
  opacity: 1;
  background: #DCD6F7;
}

.achievement-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 8rpx;
}

.achievement-name {
  font-size: 22rpx;
  color: #424874;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 隐藏滚动条但保持可滚动 */
.achievements-grid::-webkit-scrollbar {
  display: none;
}

/* 添加渐变遮罩提示可以滚动 */
.achievements-card::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 40rpx;
  background: linear-gradient(to right, transparent, #FFFFFF);
  pointer-events: none;
}

/* 功能列表 */
.function-list {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #DCD6F7;
}

.function-item:last-child {
  border-bottom: none;
}

.function-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: #424874;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 用户信息头部 */
.user-header {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.van-cell {
  background: #FFFFFF !important;
}

.van-cell__title {
  color: #424874 !important;
}

.van-cell__label {
  color: #A6B1E1 !important;
}

/* 成就网格 */
.van-grid {
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #FFFFFF !important;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.van-grid-item__text {
  color: #424874 !important;
}

/* 虚拟宠物区域 */
.pet-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.pet-message {
  color: #A6B1E1;
}

/* 功能列表 */
.van-cell-group {
  border-radius: 24rpx !important;
  overflow: hidden;
  background: #FFFFFF !important;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

/* 头部样式 */
.profile-header {
  background: linear-gradient(180deg, #4A90E2 0%, #357ABD 100%);
  padding: 40rpx 30rpx;
  color: #FFFFFF;
  border-radius: 0 0 40rpx 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #FFFFFF;
}

.streak-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.9;
}

.streak-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 数据概览样式 */
.stats-overview {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx 0;
}

.stat-divider {
  width: 2rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* 成就系统样式 */
.achievements-section {
  margin: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.achievement-progress {
  font-size: 24rpx;
  color: #999999;
}

.achievements-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.achievement-item {
  text-align: center;
  opacity: 0.5;
}

.achievement-item.unlocked {
  opacity: 1;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.achievement-name {
  font-size: 24rpx;
  color: #666666;
}

/* 虚拟宠物样式 */
.pet-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.pet-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.pet-mood {
  display: flex;
  align-items: center;
}

.mood-star {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

/* 功能列表样式 */
.function-list {
  margin: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.function-left {
  display: flex;
  align-items: center;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.arrow-right {
  width: 32rpx;
  height: 32rpx;
} 