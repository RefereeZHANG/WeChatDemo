page {
  background-color: #F4EEFF;
}

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-between;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.stats-item {
  text-align: center;
  flex: 1;
  padding: 0 10rpx;
}

.stats-item .num {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #424874;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stats-item .label {
  font-size: 24rpx;
  color: #A6B1E1;
  white-space: nowrap;
}

/* 账本列表 */
.book-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #424874;
}

.filter-tags {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0;
}

.filter-tags .van-tag {
  padding: 6rpx 16rpx;
  font-size: 24rpx;
}

.filter-tags .active {
  background: #424874 !important;
  color: #F4EEFF !important;
}

/* 账本卡片 */
.book-card {
  background: #F4EEFF;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.book-header {
  margin-bottom: 16rpx;
}

.book-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 12rpx;
}

.book-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #424874;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.book-amount {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  flex-wrap: nowrap;
}

.amount-label {
  font-size: 22rpx;
  color: #A6B1E1;
}

.amount-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #424874;
}

/* 成员展示 */
.book-members {
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(166, 177, 225, 0.2);
  margin-bottom: 16rpx;
}

.member-avatars {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
}

.member-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 2rpx solid #FFFFFF;
  margin-right: -12rpx;
  flex-shrink: 0;
}

.add-member {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 8rpx;
  flex-shrink: 0;
}

/* 操作按钮 */
.book-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  padding-top: 4rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #FFFFFF;
  border: none;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #424874;
  min-width: auto;
  line-height: 1.5;
}

.action-btn:after {
  border: none;
}

.action-btn text {
  white-space: nowrap;
}

/* 创建按钮 */
.btn-create {
  position: fixed;
  bottom: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #424874;
  color: #F4EEFF;
  font-size: 28rpx;
  padding: 16rpx 48rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(66, 72, 116, 0.3);
  z-index: 99;
  white-space: nowrap;
}

/* 分享面板 */
.share-panel {
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  max-height: 70vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.share-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.share-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #424874;
}

.share-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  flex: 1;
  padding-bottom: 24rpx;
}

.share-qrcode {
  width: 260rpx;
  height: 260rpx;
  margin-bottom: 20rpx;
}

.share-actions {
  display: flex;
  gap: 16rpx;
  width: 100%;
  padding: 0 20rpx 20rpx;
  position: relative;
  z-index: 99;
}

.btn-share-wechat,
.btn-save-image {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0;
  border-radius: 32rpx;
  font-size: 26rpx;
  min-width: auto;
  line-height: 1.5;
  /* margin-bottom: env(safe-area-inset-bottom); 安全距离*/
}

.btn-share-wechat {
  background: #424874;
  color: #F4EEFF;
}

.btn-save-image {
  background: #DCD6F7;
  color: #424874;
}

/* 修改弹出层样式 */
.van-popup {
  max-height: 80vh !important;
  overflow: hidden !important;
}

.van-popup--bottom {
  padding-bottom: env(safe-area-inset-bottom) !important;
} 