/**index.wxss**/
page {
  background-color: #F4EEFF;
  min-height: 100vh;
}

.container {
  padding-bottom: 120rpx;
}

/* 导航栏 */
.nav-bar {
  background-color: #F4EEFF !important;
}

/* 预算卡片 */
.budget-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.budget-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #424874;
  text-align: center;
  margin-bottom: 20rpx;
}

.budget-circle {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.budget-info {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #DCD6F7;
}

.budget-item {
  text-align: center;
}

.budget-item .label {
  font-size: 26rpx;
  color: #A6B1E1;
  margin-bottom: 8rpx;
  display: block;
}

.budget-item .value {
  font-size: 32rpx;
  color: #424874;
  font-weight: bold;
}

/* 今日账单卡片 */
.today-bills {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #424874;
}

.today-total {
  font-size: 28rpx;
  color: #A6B1E1;
}

.bill-list {
  margin-top: 20rpx;
}

.bill-item {
  border-radius: 12rpx !important;
  margin-bottom: 16rpx;
  background: #F4EEFF !important;
}

.expense {
  color: #424874 !important;
  font-weight: bold;
}

.income {
  color: #A6B1E1 !important;
  font-weight: bold;
}

.delete-btn {
  width: 130rpx;
  height: 100%;
  background-color: #424874;
  color: #F4EEFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 记账按钮 */
.btn-create {
  position: fixed;
  bottom: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #424874;
  color: #F4EEFF;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(66, 72, 116, 0.3);
  z-index: 99;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 顶部栏样式 */
.header {
  background: #FFFFFF;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

.month-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #424874;
}

.budget-progress {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.circle-progress {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 8rpx solid #4A90E2;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 账单列表样式 */
.van-cell-group {
  border-radius: 24rpx !important;
  overflow: hidden;
  margin-bottom: 20rpx;
  background: #FFFFFF !important;
}

.van-cell {
  background: #FFFFFF !important;
}

.van-cell__title {
  color: #424874 !important;
}

/* 添加按钮样式 */
.add-bill-btn {
  position: fixed !important;
  bottom: 140rpx !important;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx !important;
  height: 100rpx !important;
  border-radius: 50% !important;
  background: #424874 !important;
  box-shadow: 0 4rpx 20rpx rgba(66, 72, 116, 0.3);
}

.add-bill-btn image {
  width: 60rpx;
  height: 60rpx;
}

/* 顶部导航栏 */
.van-nav-bar {
  background-color: #F4EEFF !important;
}

.van-nav-bar__text {
  color: #424874 !important;
}

/* 修改账单项图标样式 */
.category-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  background: #F4EEFF;
  border-radius: 16rpx;
  margin-right: 16rpx;
}

.van-icon {
  display: block !important;
}
