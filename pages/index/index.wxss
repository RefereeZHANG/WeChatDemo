/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 顶部栏样式 */
.header {
  background: #FFFFFF;
  padding: 40rpx 30rpx;
}

.month-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

.budget-progress {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.circle-progress {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 8rpx solid #4A90E2;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 账单列表样式 */
.bill-list {
  padding: 20rpx;
}

.bill-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.bill-info {
  flex: 1;
}

.bill-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.expense {
  color: #FF5252;
}

.income {
  color: #4CAF50;
}

/* 添加按钮样式 */
.add-bill-btn {
  position: fixed !important;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%);
  width: 50px !important;
  height: 50px !important;
}

.add-bill-btn image {
  width: 60rpx;
  height: 60rpx;
}

.delete-btn {
  width: 65px;
  height: 100%;
  background-color: #FF5252;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.budget-circle {
  display: flex;
  justify-content: center;
  padding: 20px 0;
  background: #fff;
}

.expense {
  color: #FF5252 !important;
}

.income {
  color: #4CAF50 !important;
}
