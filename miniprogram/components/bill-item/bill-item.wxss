.bill-item {
  display: flex;
  padding: 30rpx;
  background: #FFFFFF;
  margin-bottom: 2rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.category-icon image {
  width: 100%;
  height: 100%;
}

.bill-info {
  flex: 1;
}

.bill-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 32rpx;
  color: #333333;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
}

.amount.expense {
  color: #FF5252;
}

.amount.income {
  color: #4CAF50;
}

.bill-sub {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
} 