.bill-input-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
}

.bill-input-panel.show {
  transform: translateY(0);
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: -1;
}

.panel-content {
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  min-height: 60vh;
}

/* 顶部栏样式 */
.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 类型选择器样式 */
.type-selector {
  display: flex;
  background: #F5F5F5;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666666;
}

.type-item.active {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 8rpx;
}

/* 金额输入样式 */
.amount-input {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F5F5F5;
}

.currency {
  font-size: 48rpx;
  margin-right: 20rpx;
  color: #333333;
}

.amount-input input {
  font-size: 48rpx;
  flex: 1;
}

/* 分类列表样式 */
.category-list {
  white-space: nowrap;
  margin-bottom: 30rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  opacity: 0.6;
}

.category-item.active {
  opacity: 1;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

/* 备注输入样式 */
.note-input {
  background: #F5F5F5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.note-input input {
  font-size: 28rpx;
}

/* 日期选择器样式 */
.date-picker {
  margin-bottom: 40rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  color: #666666;
  font-size: 28rpx;
}

.calendar-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 保存按钮样式 */
.save-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
}

.save-btn.disabled {
  background: #CCCCCC;
} 