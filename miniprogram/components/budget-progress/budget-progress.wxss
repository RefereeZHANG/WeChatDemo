.budget-progress {
  padding: 30rpx;
}

.progress-ring {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
}

.progress-canvas {
  width: 300rpx;
  height: 300rpx;
}

.progress-info {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.remaining-amount {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.remaining-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}

.budget-details {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.detail-item {
  text-align: center;
}

.label {
  font-size: 24rpx;
  color: #999999;
}

.value {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-top: 8rpx;
} 