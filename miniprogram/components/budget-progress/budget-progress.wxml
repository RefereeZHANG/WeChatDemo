<view class="budget-progress">
  <view class="progress-ring">
    <canvas type="2d" id="progressCanvas" class="progress-canvas"></canvas>
    <view class="progress-info">
      <text class="remaining-amount">¥{{remainingAmount}}</text>
      <text class="remaining-text">剩余预算</text>
    </view>
  </view>
  <view class="budget-details">
    <view class="detail-item">
      <text class="label">总预算</text>
      <text class="value">¥{{budget}}</text>
    </view>
    <view class="detail-item">
      <text class="label">已使用</text>
      <text class="value">¥{{usedAmount}}</text>
    </view>
  </view>
</view> 