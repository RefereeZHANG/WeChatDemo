page {
  background-color: #F4EEFF;
  height: 100%;
}

.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 添加底部padding，防止内容被遮挡 */
  box-sizing: border-box;
}

/* Tab样式优化 */
.van-tabs__wrap {
  background: #FFFFFF !important;
  border-radius: 24rpx 24rpx 0 0 !important;
  margin: 20rpx 20rpx 0 !important;
}

.van-tabs__content {
  padding-bottom: 40rpx; /* 为标签页内容添加底部间距 */
}

/* 图表区域样式优化 */
.chart-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 177, 225, 0.2);
}

/* 月度概览样式优化 */
.monthly-overview {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx; /* 添加底部间距 */
}

/* 趋势卡片样式优化 */
.trend-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx; /* 添加底部间距 */
}

/* 确保最后一个section没有底部margin */
.chart-section:last-child {
  margin-bottom: 0;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #424874;
  margin-bottom: 30rpx;
}

/* 预算环形图 */
.budget-ring {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}

.budget-info {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #DCD6F7;
}

.info-item {
  text-align: center;
}

.info-item .label {
  font-size: 26rpx;
  color: #A6B1E1;
  display: block;
  margin-bottom: 8rpx;
}

.info-item .value {
  font-size: 32rpx;
  color: #424874;
  font-weight: bold;
}

.trend-card {
  flex: 1;
  background: #F4EEFF;
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
}

.trend-card .label {
  font-size: 26rpx;
  color: #A6B1E1;
  display: block;
  margin-bottom: 8rpx;
}

.trend-card .value {
  font-size: 36rpx;
  color: #424874;
  font-weight: bold;
  display: block;
  margin: 8rpx 0;
}

.trend-card .desc {
  font-size: 24rpx;
  color: #A6B1E1;
}

/* 分类列表 */
.category-list {
  margin-top: 20rpx;
  max-height: calc(100vh - 600rpx);
  overflow-y: auto;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #DCD6F7;
}

.category-item:last-child {
  border-bottom: none;
}

.category-info {
  display: flex;
  align-items: center;
}

.color-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.category-name {
  color: #424874;
  font-size: 28rpx;
}

.category-amount {
  color: #424874;
  font-weight: bold;
  font-size: 28rpx;
}

/* 趋势图表区域 */
.trend-summary {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #DCD6F7;
}

.summary-item {
  text-align: center;
}

.summary-item .label {
  font-size: 26rpx;
  color: #A6B1E1;
  display: block;
  margin-bottom: 8rpx;
}

.summary-item .value {
  font-size: 32rpx;
  font-weight: bold;
}

.summary-item .value.income {
  color: #424874;
}

.summary-item .value.expense {
  color: #A6B1E1;
}

/* 添加切换动画 */
.chart-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.expense-type-switch {
  transition: all 0.2s ease-in-out;
}

.overview-item {
  flex: 1;
  text-align: center;
  padding: 0 20rpx;
}

.overview-item:not(:last-child) {
  border-right: 1rpx solid #DCD6F7;
}

.overview-item .label {
  font-size: 26rpx;
  color: #A6B1E1;
  display: block;
  margin-bottom: 10rpx;
}

.overview-item .value {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.value.income {
  color: #4CAF50;
}

.value.expense {
  color: #FF6B6B;
}

.value.increase {
  color: #FF6B6B;
}

.value.decrease {
  color: #4CAF50;
}

.pie-container {
  width: 100%;
  height: 400rpx;
  position: relative;
  margin: 20rpx 0;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.trend-chart {
  width: 100%;
  height: 400rpx;
  position: relative;
  margin: 20rpx 0;
} 