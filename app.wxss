/**app.wxss**/
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
}

/* 文字样式 */
.text-primary {
  color: #333333;
  font-size: 32rpx;
}

.text-secondary {
  color: #999999;
  font-size: 28rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: #424874 !important;
  color: #F4EEFF !important;
  border: none !important;
}

.btn-warning {
  background-color: #FF6B6B;
  color: #FFFFFF;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(66, 72, 116, 0.1);
}

page {
  background-color: #F4EEFF;
  color: #424874;
  padding-bottom: 100rpx; /* 为底部导航栏预留空间 */
}

/* 自定义 Vant 主题色 */
.van-button--primary {
  background-color: var(--primary-color) !important;
  border-color: var(--primary-color) !important;
}

/* 次要按钮样式 */
.btn-secondary {
  background-color: #A6B1E1 !important;
  color: #F4EEFF !important;
  border: none !important;
}

/* 分割线样式 */
.divider {
  height: 1px;
  background-color: #DCD6F7;
  margin: 16rpx 0;
}

/* 标题文字样式 */
.title {
  color: #424874;
  font-size: 32rpx;
  font-weight: bold;
}

/* 副标题文字样式 */
.subtitle {
  color: #A6B1E1;
  font-size: 28rpx;
}

/* 普通文字样式 */
.text {
  color: #424874;
  font-size: 28rpx;
}

/* 表单输入框样式 */
.input {
  background-color: #F4EEFF;
  border: 1px solid #DCD6F7;
  border-radius: 8rpx;
  padding: 16rpx;
}

/* 标签样式 */
.tag {
  background-color: #DCD6F7;
  color: #424874;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

/* 选中状态样式 */
.selected {
  background-color: #A6B1E1;
  color: #F4EEFF;
}

/* 如果页面有固定在底部的按钮，需要调整其位置 */
.fixed-bottom {
  bottom: calc(100rpx + env(safe-area-inset-bottom)) !important;
} 
